{% extends "AwEventBundle::layout.html.twig" %}

{% block page_title -%}
    {{ 'member.showEnneagramScreen'|trans }}
{% endblock %}

{% block body -%}
{% set enneagramType = app.user.enneagramType %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">あなたはタイプ{{ enneagramType }}です</h3>
    </div>
    <div class="panel-body">
        <div class="panel-body">{{ ('enneagram.type' ~ enneagramType ~ '.trend')|trans }}</div>
    </div>
</div>
<div class="my-table-responsive">
{% for i in 1..9 %}
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tbody>
        {% for j in 1..20 %}
            <tr>
                <td>{{ form_widget(_context['type' ~ i ~ 'Form']['question' ~ j], {'attr':{'disabled':true}}) }}</td>
                <td>{{ 20 * (i - 1) + loop.index }}</td>
                <td>{{ ('enneagram.type' ~ i ~ '.question' ~ j)|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endfor %}
</div>
{% endblock %}
